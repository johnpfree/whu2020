<h2>Stories for: {TRIP_NAME}</h2>

<!-- BEGIN rows -->
<hr />
	<div class="row">
	  <div class="col-sm-2">
			<img class="story-image img-rounded img-responsive squareme {USE_IMAGE}" src='{REL_PICPATH}pix/iPhoto/{WF_IMAGES_PATH}/{PIC_NAME}' border="0" />
			<img class="story-image img-rounded img-responsive squareme {USE_FLICK}" src='{FLICK_URL}' border="0" />
		</div>
	  <div class="col-sm-10">
			<div class="row">
			  <div class="col-lg-7">
					<a class="story-title" href="{STORY_LINK}">{STORY_TITLE}</a>
				</div>
			  <div class="col-lg-5">
					<p class="story-dates">{STORY_DATES}</p>
				</div>
				<div class="col-lg-12">
					{STORY_EXCERPT}
				</div>
			</div>
		</div>
	</div>
<!-- END rows -->
{LINK_BAR}

