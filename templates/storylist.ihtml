#the_content hr {
	margin: 18px 0 4px;
	height: 2px;
	background-color: #684F22;
}	
.story-title {
	font-size: 160%;
	{SANS_FONT};
}
.story-dates {
	text-align: right;
	vertical-align: top;
	font-size: 120%;
	{SANS_FONT};
}
.XXstory-image {
	float: left;
	margin: 0 .6em -5px 15px;
}
.story-part {
	margin: 0 0 10px 15px;
}
	
.hideme { display: none; }
.squareme {
	object-fit: cover;
	width: 120px;
	height: 120px;
}

@media (max-width: 999px)  {	
	.squareme {
		width: 95px;
		height: 95px;
	}
}
@media (min-width: 972px)  {	
	.squareme {
		width: 130px;
		height: 130px;
	}
}

